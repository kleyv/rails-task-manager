<div class="container col-8">
  <h1><%= @task.title %></h1>

  <%= link_to 'Edit task', edit_path %>

  <p><%= @task.details %></p>


  <form action="">
    <% if @task.completed%>
      <input type="checkbox" id="task<%= @task.id %>" name="task<%= @task.id %>" value="task" checked>
    <% else %>
      <input type="checkbox" id="task<%= @task.id %>" name="task<%= @task.id %>" value="task">
    <% end %>
    <label for="task<%= @task.id %>"><%= @task_status %></label>
    <br>
  </form>

  <br>

  <%= link_to 'Back to list', tasks_path %>

</div>

